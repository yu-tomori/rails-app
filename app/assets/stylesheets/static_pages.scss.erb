.home-text {
    font-size: 30px;
    margin-top: 30px;
    margin-left: 10px;
    color: #808080;
}

.home-flex {
    display: flex;
    flex-direction: row;    
    flex-wrap: wrap;
    justify-content: center; 

 .home-user {
    // background-image: url(<%= "/assets/mono-gradation.png" %>);
     height: 200px;
     width: 260px;
     margin: 10px 10px;
     border-radius: 10px;
     position: relative;
     &:hover {
       border: solid 2px #808080;
     }
  
    
    .card-icon {
       border: solid 1px white;
       border-radius: 70px;
       display: inline;
       position: absolute;
       top: 100px;
       left: 20px;
    }
    
    .text {
       display: inline-block;
       position: absolute;
       top: 100px;
       left: 100px;     
  
      .card-user-name {
         color: white;
         font-size: 15px;
         margin-top: 5px;
         margin-bottom: 5px;
      }
     
      .card-user-type {
         color: white;
         font-size: 15px;
         margin-top: 5px;
         margin-bottom: 5px;
      }
    }
 }

}

.home-article {
     height: 300px;
     width: 260px;
     margin: 10px 10px;
     border-radius: 10px;
     border: solid 2px black;
     &:hover {
       border: solid 2px #808080;
     }

  .home-article-image {
       width: 256px;
       height: 200px;
       margin: 0px auto;     
       border-radius: 10px 10px 0px 0px;
   }

  .home-article-name {
       font-size: 15px;
       color: #808080;
       margin-left: 5px;
       margin-top: 10px;
  }
  
  .home-article-creator {
       font-size: 15px;
       color: #808080;
       margin-left: 5px;
  }


}
