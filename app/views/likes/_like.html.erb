<% if @login_user.present? %>
 <span class="like">
  <% if article.like?(@login_user) %>
   <%= form_for(article.likes.find_by(user_id: @login_user.id), html: {id: article.id},  method: :delete, remote: true) do |f| %>
    <%= button_tag(class: "btn btn-default btn-xs") do %>
     <%= content_tag :span, " #{article.likes_count} likes", class: "glyphicon glyphicon-heart" %>
    <% end %>
   <% end %>
  <% else %>
   <%= form_for(article.likes.build, html: {id: article.id}, remote: true) do |f| %>
    <div><%= hidden_field_tag :article_id, article.id %></div>
    <%= button_tag(class: "btn btn-default btn-xs") do %>
     <%= content_tag :span, " #{article.likes_count} likes", class: "glyphicon glyphicon-heart-empty" %>
    <% end %>
   <% end %>
  <% end %>
 </span>
<% end %>
